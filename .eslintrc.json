{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
    "no-trailing-spaces": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "prefer-const": ["error"],
    "getter-return": ["error"],
    "curly": ["error"]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  }
}